{
  "include": [
    "src/**/*",
  ],
  "exclude": [
    "./dist/**/*"
  ],
  "compilerOptions": {
    "outDir": "./dist",
    "typeRoots": [
      "./node_modules/@types",
    ],
    "target": "ESNext", 
    "module": "ESNext",
    "declaration": true,
    "declarationMap": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "skipLibCheck": true, 
    "resolveJsonModule": true,
    "strict": true
  }
}